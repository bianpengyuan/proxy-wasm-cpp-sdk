FROM ubuntu:bionic

RUN apt-get update && apt-get -y dist-upgrade && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    git \
    gcc \
    g++ \
    python \
    python3 \
    xz-utils

RUN curl -LO https://github.com/bazelbuild/bazelisk/releases/download/v1.1.0/bazelisk-linux-amd64
RUN mv bazelisk-linux-amd64 /usr/bin/bazel
RUN chmod +x usr/bin/bazel
